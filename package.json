{
    "name": "project",
    "version": "0.0.1",
    "description": "For project",
    "license": "MIT",
    "author": "",
    "type": "commonjs",
    "main": "server.ts",
    "scripts": {
        "clean": "rimraf dist",
        "fmt": "biome check --write .",
        "build:client": "esbuild public/client/**/*.ts --bundle --outdir=dist/public/client --format=esm --target=es2022 --platform=browser",
        "watch:client": "esbuild public/client/**/*.ts --bundle --outdir=dist/public/client --format=esm --target=es2022 --platform=browser --watch",
        "build:ts": "tsc",
        "copy:assets": "copyfiles -u 1 \"views/**/*.ejs\" dist/views && copyfiles -u 1 -e \"public/**/*.ts\" \"public/**/*\" dist/public",
        "build": "npm run clean && npm run build:ts && npm run build:client && npm run copy:assets",
        "start": "node dist/server.js",
        "typecheck": "tsc -p .",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.7",
        "dotenv": "^16.4.5",
        "ejs": "^3.1.10",
        "express": "^4.21.1",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.0.1",
        "helmet": "^7.1.0",
        "image-size": "^2.0.2",
        "mongodb": "^6.20.0",
        "mongoose": "^8.19.2",
        "morgan": "^1.10.0",
        "multer": "^2.0.2",
        "passport": "^0.7.0",
        "passport-local": "^1.0.0",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@apst/biome": "^0.3.0",
        "@biomejs/biome": "^2.3.5",
        "@types/bcryptjs": "^2.4.6",
        "@types/compression": "^1.7.5",
        "@types/cookie-parser": "^1.4.7",
        "@types/express": "^4.17.21",
        "@types/morgan": "^1.9.9",
        "@types/multer": "^2.0.0",
        "@types/node": "^20.11.30",
        "@types/passport": "^1.0.16",
        "@types/passport-local": "^1.0.38",
        "copyfiles": "^2.4.1",
        "esbuild": "^0.25.12",
        "rimraf": "^6.1.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    }
}
