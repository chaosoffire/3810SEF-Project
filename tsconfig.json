{
  "compilerOptions": {
    "target": "ES2022",
    "module": "node16",
    "rootDir": "",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "typeRoots": [
      "./models/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "models/**/*",
    "server.ts",
    "public/frontend/**/*"]
}