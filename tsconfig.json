{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "rootDir": "",
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": false,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./models/types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "models/**/*",
        "server.ts",
        "public/frontend/**/*"
    ]
}
