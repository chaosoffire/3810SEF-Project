{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "rootDir": "",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "./models/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "models/**/*",
    "server.ts",
    "src/**/*"
  ]
}